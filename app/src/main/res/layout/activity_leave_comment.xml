<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/ic_section_background"
    android:orientation="vertical"
    tools:context=".activity.LeaveCommentActivity">


    <TextView
        android:id="@+id/leave_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/fontFamilyMedium"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/headingTextSize" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/start_date_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:hintTextAppearance="@style/MyHintText">

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/comment"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/mediumTextSize"
            android:theme="@style/MyEditText"
            tools:ignore="TextFields" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button_bg"
        android:foreground="?android:selectableItemBackground"
        android:text="@string/submit"
        android:textColor="@color/colorIconText" />
</LinearLayout>